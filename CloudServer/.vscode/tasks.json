{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    //"command": "make",
    "tasks": [
        {
            "label": "GoServices",
            "type": "shell",
            "kind": "build",
            "isBuildCommand": true,
            "showOutput": "always",
            "args": [
                "all"
            ],
            "command": "go build ${file}",
            "options": {
                "cwd": "${workspaceRoot}/src/services/Gateway"
            },
        },
        {
            "label": "Com Makefile",
            "type": "shell",
            "kind": "build",
            "isBuildCommand": true,
            "showOutput": "always",
            "args": [
                "all"
            ],
            "command": "make",
            "options": {
                "cwd": "${workspaceRoot}/Com"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
