 * Description : defines the interface for the message
 *
 */

Class MessageHeader
{

};

class MessageData
{

};

class MessageFooter
{

};

class MessageMetaData
{

};

// template for message header
template<class Header,class Data,class Footer,class Metadata>
class message
{
	Header header;
	Data   data;
	Footer footer;
	Metadata metadata;

public:
	Header getHeader()
	{
		return header;
	}

	Data getData()
	{
		return data;
	}

	Footer getFooter()
	{
		return footer;
	}

	Metadata getMetadata()
	{
		return metadata;
	}

};
