// template for message header
template<class Header,class Data,class Footer,class Metadata>
class message
{
	Header header;
	Data   data;
	Footer footer;
	Metadata metadata;

public:
	Header GetHeader()
	{
		return header;
	}

	UINT8* GetData()
	{
		return data.GetData();
	}

	Footer GetFooter()
	{
		return footer;
	}

	Metadata GetMetadata()
	{
		return metadata;
	}

	UINT8 GetLength()
	{
		return 10;
	}

	void SetLength(UINT8 length)
	{

	}

	// Convert the entire message into an byte array
	UINT8* GetMessageData()
	{
		return NULL;
	}

	// RSSI associated api
	BOOL SetRssi(UINT8 value)
	{
		return TRUE;
	}

	UINT8 GetRssi()
	{
		return 10;
	}

	BOOL ClearRssi()
	{
		return TRUE;
	}

	// API associated with timestamping
	// Sets the timestamp
	void SetTimeStamp(UINT32 value)
	{

	}

	// Clears the timestamp associated with the packet
	void ClearTimeStamp()
	{

	}

	// returns the timestamp associated with this packet
	UINT32 GetTimeStamp()
	{
		return 10;
	}

};
