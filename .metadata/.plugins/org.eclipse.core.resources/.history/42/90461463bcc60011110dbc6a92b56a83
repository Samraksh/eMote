Class MessageHeader
{

};

class MessageData
{

};

class MessageFooter
{

};

class MessageMetaData
{

};

// template for message header
template<class Header,class Data,class Footer,class Metadata>
class message
{
	Header header;
	Data   data;
	Footer footer;
	Metadata metadata;

public:
	Header GetHeader()
	{
		return header;
	}

	Data GetData()
	{
		return data;
	}

	Footer GetFooter()
	{
		return footer;
	}

	Metadata GetMetadata()
	{
		return metadata;
	}

	UINT8 GetLength()
	{
		return 10;
	}

	UINT8* GetMessageData()
	{
		return NULL;
	}

};
